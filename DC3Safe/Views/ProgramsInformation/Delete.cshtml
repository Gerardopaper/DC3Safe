@model DC3Safe.Models.ProgramInformation

@{
    ViewData["Title"] = "Eliminar Programa";
}

<h1>Eliminar Programa</h1>

<h3>Esta seguro que desea eliminar este registro?</h3>
<div>
    <h4>ProgramInformation</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre del curso
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Duración en horas
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DurationHours)
        </dd>
        <dt class = "col-sm-2">
            Periodo de ejecución (Inicio):
        </dt>
        <dd class = "col-sm-10">
            @Model.StartDate.ToString("yyyy/MM/dd")
        </dd>
        <dt class = "col-sm-2">
            Periodo de ejecución (Fin):
        </dt>
        <dd class = "col-sm-10">
            @Model.EndDate.ToString("yyyy/MM/dd")
        </dd>
        <dt class = "col-sm-2">
            Área temática del curso
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar a la lista</a>
    </form>
</div>
