@model DC3Safe.Models.Company

@{
    ViewData["Title"] = "Eliminar empresa";
}

<h1>Eliminar empresa</h1>

<h3>Esta seguro que desea eliminar este registro?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre o razón social
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            SHCP
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Shcp)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar a la lista</a>
    </form>
</div>
