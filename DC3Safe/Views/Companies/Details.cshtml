@model DC3Safe.Models.Company

@{
    ViewData["Title"] = "Detalles de empresa";
}

<h1>Detalles</h1>

<div>
    <h4>Empresa</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre o razón social
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            SHCP
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Shcp)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-action="Index">Regresar a la lista</a>
</div>
