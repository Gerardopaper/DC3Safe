@model DC3Safe.Models.Company

@{
    ViewData["Title"] = "Editar empresa";
}

<h1>Editar</h1>

<h4>Empresa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="mb-3">
                <label class="form-label">
                    Nombre o razón social (En caso de persona física, anotar apellido paterno, apellido materno y nombre
                </label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">
                    Registro Federal de Contribuyentes con homoclave (SHCP)
                </label>
                <input asp-for="Shcp" class="form-control" />
                <span asp-validation-for="Shcp" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
