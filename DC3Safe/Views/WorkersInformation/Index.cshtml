@{
    ViewData["Title"] = "Trabajadores";
}

@section Styles {
    <partial name="_DataTablesStylesPartial" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
}

<h1>@ViewData["Title"]</h1>

<partial name="_TableButtonsPartial" />

<div class="table-responsive">
    <table id="datatable" class="table table-bordered table-sm table-striped table-hover" style="width:100%">
        <thead>
            <tr>
                <th data-dt-order="disable" width="1%">
                    <div class="form-check mb-0">
                        <input class="form-check-input" type="checkbox" onchange="selectAllTableChecks(this)">
                        <label class="form-check-label" for="flexCheckDefault">
                            Todos
                        </label>
                    </div>
                </th>
                <th>
                    Apellido paterno
                </th>
                <th>
                    Apellido materno
                </th>
                <th>
                    Nombre(s)
                </th>
                <th>
                    CURP
                </th>
                <th>
                    Ocupación
                </th>
                <th>
                    Posición
                </th>
                <th data-dt-order="disable">Opciones</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

<partial name="_BatchDeleteModalPartial" />

@Html.AntiForgeryToken()

@section Scripts {
    <partial name="_DataTablesScriptsPartial" />
    <script src="~/js/workers-information/index.js" asp-append-version="true"></script>
}