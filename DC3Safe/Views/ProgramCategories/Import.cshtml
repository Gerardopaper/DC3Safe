@model ImportModel

@{
    ViewData["Title"] = "Importar Areas Temáticas";
}

<h1>Importar Areas Temáticas</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <p><a asp-controller="ImportTemplates" asp-action="Download" asp-route-template="@ExcelTemplate.ProgramCategories">Descargar plantilla</a></p>
        <form asp-controller="Import" asp-action="ProgramCategories" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label class="form-label">Plantilla</label>
                <input asp-for="ImportFile" accept=".xlsx" class="form-control"/>
                <span asp-validation-for="ImportFile" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input type="submit" value="Importar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
